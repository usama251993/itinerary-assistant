{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Plugins",
      "program": "${workspaceFolder}/tailwind/material/elevation/mat-elevation.plugin.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Debug Angular",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "Serve Angular",
      "url": "http://localhost:4200/",
      "cwd": "${workspaceFolder}",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      },
      "runtimeArgs": [
        "--incognito"
      ]
    }
  ]
}
