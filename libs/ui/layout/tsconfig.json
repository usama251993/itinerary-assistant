      "@itinerary-assistant/ui/material": [
        "./libs/ui/shared/material/src/index.ts"
      ],
      "@itinerary-assistant/ui/elements": [
        "./libs/ui/shared/elements/src/index.ts"
      ],
      "@itinerary-assistant/shared": [
        "./libs/shared/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
