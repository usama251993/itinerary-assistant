{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "app:ui",
                "onlyDependOnLibsWithTags": [
                  "lib:shared-data",
                  "lib:ui-core",
                  "lib:ui-shared-elements",
                  "lib:ui-shared-icons",
                  "lib:ui-layout",
                  "lib:ui-shared-material"
                ]
              },
              {
                "sourceTag": "app:api",
                "onlyDependOnLibsWithTags": [
                  "lib:shared-data",
                  "lib:api-core",
                  "lib:api-database-typeorm",
                  "lib:api-database-entities",
                  "lib:api-features-trip"
                ]
              },
              {
                "sourceTag": "lib:ui-layout",
                "onlyDependOnLibsWithTags": [
                  "lib:ui-shared-elements",
                  "lib:ui-shared-icons",
                  "lib:ui-shared-material"
                ]
              },
              {
                "sourceTag": "lib:ui-core",
                "onlyDependOnLibsWithTags": [
                  "lib:shared-data",
                  "lib:ui-shared-elements"
                ]
              },
              {
                "sourceTag": "lib:ui-shared-elements",
                "onlyDependOnLibsWithTags": [
                  "lib:shared-data",
                  "lib:ui-shared-material"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "rules": {
        "@typescript-eslint/comma-dangle": "warn",
        "@typescript-eslint/no-empty-function": "warn",
        "@typescript-eslint/no-constant-condition": "off",
        "@typescript-eslint/no-duplicate-imports": "error",
        "@typescript-eslint/no-empty-interface": "warn",
        "@typescript-eslint/no-extra-boolean-cast": "off",
        "no-extra-boolean-cast": "off",
        "@typescript-eslint/no-redeclare": "warn",
        "no-trailing-spaces": "warn",
        "prefer-const": "warn"
      }
    },
    {
      "files": [
        "*.spec.ts"
      ],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-empty-function": "off"
      }
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "rules": {}
    }
  ]
}
