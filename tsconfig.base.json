{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@itinerary-assistant/api/core": ["libs/api/core/src/index.ts"],
      "@itinerary-assistant/api/database/neo4j": [
        "libs/api/database/neo4j/src/index.ts"
      ],
      "@itinerary-assistant/api/database/seed": [
        "libs/api/database/seed/src/index.ts"
      ],
      "@itinerary-assistant/api/features/person": [
        "libs/api/features/person/src/index.ts"
      ],
      "@itinerary-assistant/api/features/trip": [
        "libs/api/features/trip/src/index.ts"
      ],
      "@itinerary-assistant/api/graphql": ["libs/api/graphql/src/index.ts"],
      "@itinerary-assistant/domain": ["libs/domain/src/index.ts"],
      "@itinerary-assistant/shared/tailwind-preset": [
        "libs/shared/tailwind-preset/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
