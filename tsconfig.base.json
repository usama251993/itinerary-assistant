{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@itinerary-assistant/api/core": [
        "libs/api/core/src/index.ts"
      ],
      "@itinerary-assistant/shared/data": [
        "libs/shared/data/src/index.ts"
      ],
      "@itinerary-assistant/ui/core": [
        "libs/ui/core/src/index.ts"
      ],
      "@itinerary-assistant/ui/elements": [
        "libs/ui/shared/elements/src/index.ts"
      ],
      "@itinerary-assistant/ui/icon": [
        "libs/ui/shared/icon/src/index.ts"
      ],
      "@itinerary-assistant/ui/layout": [
        "libs/ui/layout/src/index.ts"
      ],
      "@itinerary-assistant/ui/material": [
        "libs/ui/shared/material/src/index.ts"
      ],
      "@itinerary-assistant/ui/tailwind": [
        "libs/ui/shared/tailwind/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
