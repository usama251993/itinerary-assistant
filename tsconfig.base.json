{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@itinerary-assistant/api/core": [
        "libs/api/core/src/index.ts"
      ],
      "@itinerary-assistant/api/database/entities": [
        "libs/api/database/entities/src/index.ts"
      ],
      "@itinerary-assistant/api/database/typeorm": [
        "libs/api/database/typeorm/src/index.ts"
      ],
      "@itinerary-assistant/api/features/trip": [
        "libs/api/features/trip/src/index.ts"
      ],
      "@itinerary-assistant/shared/data": [
        "libs/shared/data/src/index.ts"
      ],
      "@itinerary-assistant/shared/styles": [
        "libs/shared/styles/src/index.ts"
      ],
      "@itinerary-assistant/ui/core": [
        "libs/ui/core/src/index.ts"
      ],
      "@itinerary-assistant/ui/features/trip": [
        "libs/ui/features/trip/src/index.ts"
      ],
      "@itinerary-assistant/ui/layout": [
        "libs/ui/layout/src/index.ts"
      ],
      "@itinerary-assistant/ui/shared/elements": [
        "libs/ui/shared/elements/src/index.ts"
      ],
      "@itinerary-assistant/ui/shared/icons": [
        "libs/ui/shared/icon/src/index.ts"
      ],
      "@itinerary-assistant/ui/shared/material": [
        "libs/ui/shared/material/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
