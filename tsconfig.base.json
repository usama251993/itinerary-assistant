{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@itinerary-assistant/api/core": ["libs/api/core/src/index.ts"],
      "@itinerary-assistant/api/database/entities": [
        "libs/api/database/entities/src/index.ts"
      ],
      "@itinerary-assistant/api/database/graphql": [
        "libs/api/database/graphql/src/index.ts"
      ],
      "@itinerary-assistant/api/database/neo4j": [
        "libs/api/database/neo4j/src/index.ts"
      ],
      "@itinerary-assistant/api/database/seed": [
        "libs/api/database/seed/src/index.ts"
      ],
      "@itinerary-assistant/api/features/person": [
        "libs/api/features/person/src/index.ts"
      ],
      "@itinerary-assistant/api/shared": ["libs/api/shared/src/index.ts"],
      "@itinerary-assistant/domain": ["libs/domain/src/index.ts"],
      "@itinerary-assistant/ui/core": ["libs/ui/core/src/index.ts"],
      "@itinerary-assistant/ui/database/graphql": [
        "libs/ui/database/graphql/src/index.ts"
      ],
      "@itinerary-assistant/ui/design/components/derivative": [
        "libs/ui/design/components/derivative/src/index.ts"
      ],
      "@itinerary-assistant/ui/design/icons": [
        "libs/ui/design/icons/src/index.ts"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
