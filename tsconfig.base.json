{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@itinerary-assistant/api/database/entities": [
        "libs/api/database/entities/src/index.ts"
      ],
      "@itinerary-assistant/api/database/orm": [
        "libs/api/database/orm/src/index.ts"
      ],
      "@itinerary-assistant/core": ["libs/core/src/index.ts"],
      "@itinerary-assistant/shared/data": [
        "libs/shared/data/src/index.ts"
      ],
      "@itinerary-assistant/ui/core": ["libs/ui/core/src/index.ts"],
      "@itinerary-assistant/ui/design/components": [
        "libs/ui/design/components/src/index.ts"
      ],
      "@itinerary-assistant/ui/design/icons": [
        "libs/ui/design/icons/src/index.ts"
      ],
      "@itinerary-assistant/ui/design/material": [
        "libs/ui/design/material/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
